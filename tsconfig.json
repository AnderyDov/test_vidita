{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES6",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "src/tests"]
}
